<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/head_2"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorGray"
                android:layout_margin="10dp"
                android:textSize="@dimen/textSize_dp_24px"
                android:text="@string/getting"/>

            <RelativeLayout
                android:background="@color/white"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/nail_image"
                    android:layout_width="70dp"
                    android:background="@color/pink"
                    android:layout_marginRight="@dimen/order_image_margin"
                    android:scaleType="centerCrop"
                    android:layout_height="70dp"/>

                <TextView
                    android:id="@+id/tv_nail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ac3c2e"
                    android:layout_toRightOf="@id/nail_image"
                    android:textSize="@dimen/textSize_dp_36px"
                    android:text="@string/getting"/>


                <TextView
                    android:id="@+id/tv_price"
                    android:layout_toRightOf="@id/nail_image"
                    android:layout_marginBottom="16dp"
                    android:layout_alignBottom="@id/nail_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorGray"
                    android:textSize="@dimen/textSize_dp_28px"
                    android:text="@string/getting"/>

            </RelativeLayout>

            <TextView style="@style/horizontal_line_margin_style"/>

            <TableLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <TableRow style="@style/order_confirm_item_style">

                    <TextView
                        style="@style/order_confirm_item_name"
                        android:text="车    费"/>

                    <TextView
                        android:id="@+id/taxi_fee"
                        style="@style/order_confirm_item_value"
                        android:textSize="@dimen/textSize_dp_30px"
                        android:textColor="@color/textColorBlack"
                        android:textStyle="bold"
                        android:text="@string/getting"/>
                </TableRow>

                <TextView style="@style/horizontal_line_margin_style"/>

                <TableRow style="@style/order_confirm_item_style">

                    <TextView
                        style="@style/order_confirm_item_name"
                        android:text="优惠券"/>

                    <TextView
                        android:id="@+id/tv_coupon"
                        android:textSize="@dimen/textSize_dp_30px"
                        android:textColor="@color/textColorBlack"
                        android:textStyle="bold"
                        style="@style/order_confirm_item_value"
                        android:text="@string/getting"/>
                </TableRow>
            </TableLayout>

            <TextView style="@style/horizontal_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_margin="7dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="实付："
                    android:textColor="@color/textColorGray"
                    android:textSize="@dimen/textSize_dp_24px"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_real_pay"
                    android:layout_width="wrap_content"
                    android:text="@string/getting"
                    android:textSize="@dimen/textSize_dp_36px"
                    android:textColor="@color/textColorBlack"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <TableRow style="@style/order_confirm_item_style">

                    <TextView
                        style="@style/order_confirm_item_name"
                        android:text="联  系  人"/>

                    <TextView

                        android:id="@+id/tv_contact"
                        style="@style/order_confirm_item_value"
                        android:text="@string/getting"/>
                </TableRow>

                <TextView style="@style/horizontal_line_margin_style"/>


                <TableRow style="@style/order_confirm_item_style">

                    <TextView
                        style="@style/order_confirm_item_name"
                        android:text="预约时间"/>

                    <TextView

                        android:id="@+id/tv_planTime"
                        style="@style/order_confirm_item_value"
                        android:text="@string/getting"/>
                </TableRow>

                <TextView style="@style/horizontal_line_margin_style"/>

                <TableRow style="@style/order_confirm_item_style">

                    <TextView
                        style="@style/order_confirm_item_name"
                        android:text="联系方式"/>

                    <TextView
                        android:id="@+id/tv_mobile"
                        style="@style/order_confirm_item_value"
                        />
                </TableRow>

                <TextView style="@style/horizontal_line_margin_style"/>

                <TableRow style="@style/order_confirm_item_style">

                    <TextView
                        style="@style/order_confirm_item_name"
                        android:text="详细地址"/>

                    <TextView
                        android:id="@+id/tv_address"
                        style="@style/order_confirm_item_value"
                        />
                </TableRow>

                <TextView style="@style/horizontal_line_margin_style"/>

                <TableRow style="@style/order_confirm_item_style">

                    <TextView
                        style="@style/order_confirm_item_name"
                        android:text="备注信息"/>

                    <TextView
                        android:id="@+id/tv_summary"
                        style="@style/order_confirm_item_value"
                        />
                </TableRow>

                <TextView style="@style/horizontal_line"/>
            </TableLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@id/frag_container"/>

            <Button
                android:layout_marginTop="@dimen/button_to_text"
                android:id="@+id/pay"
                style="@style/button_large"
                android:layout_marginBottom="@dimen/button_to_bottom"
                android:text="@string/pay_now"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
