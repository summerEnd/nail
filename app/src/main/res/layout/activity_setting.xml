<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/head_2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:drawableLeft="@drawable/ic_about"
                android:id="@id/about"
                style="@style/setting_click_item"
                android:text="关于我们" />

            <TextView
                android:drawableLeft="@drawable/ic_discount_rule"
                android:id="@+id/discount_rule"
                style="@style/setting_click_item"
                android:text="@string/discount_rule" />

            <TextView
                android:drawableLeft="@drawable/ic_taxi_fee"
                android:id="@+id/taxi_fee"
                style="@style/setting_click_item"
                android:text="@string/taxi_fee" />

            <TextView
                android:drawableLeft="@drawable/ic_service_area"
                android:id="@id/service_area"
                style="@style/setting_click_item"
                android:text="服务范围" />


            <TextView
                android:drawableLeft="@drawable/ic_suggestion"
                android:id="@id/suggestion"
                style="@style/setting_click_item"
                android:text="意见反馈" />


            <TextView
                android:drawableLeft="@drawable/ic_update"
                android:id="@id/update_software"
                style="@style/setting_click_item"
                android:text="检查更新" />


            <TextView
                android:id="@id/clear_cache"
                style="@style/setting_click_item"
                android:text="清空缓存"
                android:drawableLeft="@drawable/ic_clear_cache" />


            <TextView
                android:drawableLeft="@drawable/ic_update_password"
                android:id="@id/update_password"
                style="@style/setting_click_item"
                android:text="修改密码" />


            <TextView
                android:drawableLeft="@drawable/ic_logout"
                android:id="@id/logout"
                style="@style/setting_click_item"
                android:text="退出登录" />


            <LinearLayout
                android:id="@+id/debug_item"
                android:onClick="onClick"
                android:clickable="true"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">


                <TextView
                    android:id="@id/logout"
                    style="@style/setting_click_item"
                    android:clickable="false"
                    android:textColor="#e00"
                    android:text="查看日志" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>