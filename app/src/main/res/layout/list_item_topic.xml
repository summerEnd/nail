<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/click_whit_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/avatar"
        android:src="@drawable/default_user"

        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/order_image_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="太帅是罪"
                android:textColor="#525e88"
                android:textSize="@dimen/textSize_dp_30px" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014-11-19"
                android:textColor="@color/textColorGray"
                android:textSize="@dimen/textSize_dp_24px" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="今天又因为帅被人嫉妒，帅真的无罪！"
            android:textColor="@color/textColorGray"
            android:textSize="@dimen/textSize_dp_30px" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/item_margin_top"
            />


    </LinearLayout>
</LinearLayout>