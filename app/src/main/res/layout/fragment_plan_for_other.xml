<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/windowBackground"
    android:layout_height="match_parent">

    <com.finger.support.widget.EditItem
        android:id="@+id/edit_contact"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        app:edit_drawable="@drawable/ic_user"
        android:layout_width="match_parent"
        app:edit_hint="@string/input_contact"
        android:layout_height="wrap_content" />

    <com.finger.support.widget.EditItem
        android:id="@+id/edit_mobile"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        app:edit_drawable="@drawable/ic_mobile"
        android:layout_width="match_parent"
        app:edit_hint="@string/input_mobile"
        android:layout_height="wrap_content" />

    <com.finger.support.widget.EditItem
        android:id="@+id/item_plan_time_for_other"
        style="@style/click"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        app:edit_drawable="@drawable/ic_clock"
        android:layout_width="match_parent"
        app:edit_text="选择预约时间"
        app:edit_hint="@string/input_planTime"
        app:edit_editable="false"
        android:layout_height="wrap_content" />

    <com.finger.support.widget.EditItem
        android:id="@+id/edit_address"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        app:edit_drawable="@drawable/ic_fly"
        android:layout_width="match_parent"
        app:edit_text="选择地址"
        app:edit_editable="false"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        style="@style/button_large"
        android:layout_marginBottom="20dp"
        android:id="@+id/choose_nail_artist"
        android:text="@string/choose_nail_artist" />
</LinearLayout>