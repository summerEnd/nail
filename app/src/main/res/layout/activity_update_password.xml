<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.finger.activity.other.login.UpdatePasswordActivity">

    <include
        android:id="@+id/head"
        layout="@layout/head_2" />

    <TableLayout
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            style="@style/tab_item_style"
            android:background="@drawable/bg_with_shadow"
            android:gravity="center_vertical">

            <TextView
                style="@style/tab_item_name_style"
                android:text="初始密码：" />

            <EditText
                style="@style/tab_item_value_style"
                android:inputType="textPassword"
                android:hint="@string/hint_password" />
        </TableRow>


        <TableRow
            style="@style/tab_item_style"
            android:background="@drawable/bg_with_shadow"
            android:gravity="center_vertical">

            <TextView
                style="@style/tab_item_name_style"
                android:text="最新密码：" />

            <EditText
                style="@style/tab_item_value_style"
                android:inputType="textPassword"
                android:hint="@string/hint_password" />
        </TableRow>


        <TableRow
            style="@style/tab_item_style"
            android:background="@drawable/bg_with_shadow"
            android:gravity="center_vertical">

            <TextView
                style="@style/tab_item_name_style"
                android:text="确认密码：" />

            <EditText
                style="@style/tab_item_value_style"
                android:inputType="textPassword"
                android:hint="@string/hint_password" />
        </TableRow>
    </TableLayout>

    <Button
        android:layout_marginTop="@dimen/button_to_text"
        style="@style/button_large"
        android:layout_gravity="center_horizontal"
        android:text="@string/confirm_update" />
</LinearLayout>
